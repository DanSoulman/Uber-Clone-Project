<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlacesOrder">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relLay1"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp"
            android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                app:srcCompat="@drawable/ic_search"
                tools:srcCompat="@drawable/ic_search" />

            <AutoCompleteTextView
                android:id="@+id/input_search"
                android:layout_width="253dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/imgView1"
                android:layout_centerVertical="true"
                android:layout_marginStart="43dp"
                android:layout_marginEnd="20dp"
                android:background="@null"
                android:hint="Enter Address, City or Zip Code"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColor="#000"
                android:textSize="16dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relLay3"
            android:layout_width="340dp"
            android:layout_height="170dp"
            android:layout_alignStart="@+id/relLay1"
            android:layout_alignParentTop="true"
            android:layout_marginTop="71dp"
            android:background="@drawable/common_google_signin_btn_icon_dark_normal_background">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Customer Details"
                tools:text="Customer Details" />

            <LinearLayout
                android:layout_width="115dp"
                android:layout_height="100dp"
                android:layout_below="@+id/textView3"
                android:layout_alignParentStart="true"
                android:layout_marginStart="24dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Name"
                    tools:text="Name" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Location"
                    tools:text="Location" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Balance"
                    tools:text="Balance" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="100dp"
                android:layout_below="@+id/textView3"
                android:layout_alignParentStart="true"
                android:layout_marginStart="144dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Test Name"
                    tools:text="Test Name" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="155dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="Test Location"
                    tools:text="Test Location" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Test Balance"
                    tools:text="Test Balance" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relLay2"
            android:layout_width="340dp"
            android:layout_height="179dp"
            android:layout_alignStart="@+id/relLay1"
            android:layout_alignParentTop="true"
            android:layout_marginTop="250dp"
            android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Destination Details"
                tools:text="Destination Details" />

            <LinearLayout
                android:layout_width="115dp"
                android:layout_height="100dp"
                android:layout_below="@+id/textView4"
                android:layout_alignParentStart="true"
                android:layout_marginStart="24dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Destination"
                    tools:text="Destination" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Distance"
                    tools:text="Distance" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cost"
                    tools:text="Cost" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="100dp"
                android:layout_below="@+id/textView4"
                android:layout_alignParentStart="true"
                android:layout_marginStart="144dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Select Destination"
                    tools:text="Select Destination" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="155dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="Select Destination"
                    tools:text="Select Destination" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Destination"
                    tools:text="Select Destination" />
            </LinearLayout>
        </RelativeLayout>

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_alignStart="@+id/relLay1"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="19dp"
            android:background="@drawable/button_bg_rounded_corners_red"
            android:text="Cancel"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textColorLink="@color/colorAccent"
            tools:text="Cancel" />

        <Button
            android:id="@+id/submitButton"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_alignEnd="@+id/relLay1"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="19dp"
            android:textColor="#ffffff"
            android:background="@drawable/button_bg_rounded_corners"
            android:text="Confirm"
            android:textAlignment="center"
            android:textColorLink="@color/colorAccent"
            tools:text="Confirm" />


    </RelativeLayout>

</FrameLayout>