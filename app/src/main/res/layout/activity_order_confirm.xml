<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderConfirm">

    <AutoCompleteTextView
        android:id="@+id/place_autocomplete_fragment"
        android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="79dp" />

    <RelativeLayout
        android:layout_width="270dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="58dp"
        android:layout_marginBottom="257dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nameDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/name"
            android:layout_marginStart="123dp"
            android:layout_marginTop="0dp"
            android:textSize="16dp"
            tools:text="Jamie Cotter" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Name \t\t\t:"
            android:textSize="16dp"
            tools:text="Name \t\t\t:" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="270dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="56dp"
        android:layout_marginBottom="120dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/costDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/cost"
            android:layout_marginStart="123dp"
            android:layout_marginTop="0dp"
            android:textSize="16dp"
            tools:text="$40.50" />

        <TextView
            android:id="@+id/cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Cost\t\t\t\t :"
            android:textSize="16dp"
            tools:text="Cost\t\t\t\t :" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="270dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="56dp"
        android:layout_marginBottom="167dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/distanceDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/distance"
            android:layout_marginStart="123dp"
            android:layout_marginTop="0dp"
            android:textSize="16dp"
            tools:text="180m" />

        <TextView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Distance :"
            android:textSize="16dp"
            tools:text="Distance :" />

    </RelativeLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:background="@color/colorAccent"
        android:text="Confirm"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        tools:text="Confirm" />

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="269dp"
        android:layout_height="112dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp" />

    <RelativeLayout
        android:layout_width="270dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="56dp"
        android:layout_marginBottom="211dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/locationDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView5"
            android:layout_marginStart="123dp"
            android:scrollbarAlwaysDrawVerticalTrack="false"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textSize="16dp"
            tools:text="Test Location" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Location :"
            android:textSize="16dp"
            tools:text="Location :" />

    </RelativeLayout>


</RelativeLayout>