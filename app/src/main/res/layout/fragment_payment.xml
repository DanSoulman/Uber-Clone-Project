<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relLayout"
            android:layout_width="320dp"
            android:layout_height="180dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/common_google_signin_btn_icon_light_normal_background">

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Account Details"
                android:textSize="16dp"
                android:textColor="@color/colorPrimary"/>

            <LinearLayout
                android:id="@+id/lineLay1"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="13dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Name"
                    android:textColor="#000000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Current Balance"
                    android:textColor="#000000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Balance After"
                    android:textColor="#000000"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="138dp"
                android:layout_alignTop="@+id/lineLay1"
                android:layout_alignEnd="@+id/lineLay1"
                android:layout_marginStart="13dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="-173dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/accountName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Jamie Thotter" />

                <TextView
                    android:id="@+id/accountBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="$5.00" />

                <TextView
                    android:id="@+id/accountBalanceAfter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="â‚¬0"
                    />
            </LinearLayout>
        </RelativeLayout>


        <com.stripe.android.view.CardInputWidget
            android:id="@+id/card_input_widget"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp"
            android:background="@drawable/common_google_signin_btn_icon_light_normal_background" />

        <EditText
            android:id="@+id/textView5"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_input_widget"
            android:layout_alignStart="@+id/card_input_widget"
            android:layout_marginTop="11dp"
            android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
            android:hint="Billing Name"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/textView6"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_alignStart="@+id/textView5"
            android:layout_marginTop="11dp"
            android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
            android:hint="Billing Address"
            android:inputType="textPostalAddress"
            android:textAlignment="center"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/textView7"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:layout_alignStart="@+id/textView6"
            android:layout_marginTop="11dp"
            android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
            android:hint="Top Up Amount"
            android:inputType="numberDecimal"
            android:textAlignment="center"
            android:textSize="18sp" />

        <Button
            android:id="@+id/payment_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView7"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:background="@drawable/button_bg_rounded_corners_red"
            android:text="Confirm"
            android:textColor="@color/common_google_signin_btn_text_dark_default" />


    </RelativeLayout>

</FrameLayout>