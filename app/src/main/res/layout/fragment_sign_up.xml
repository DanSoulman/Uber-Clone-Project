<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".SignUpFragment"
android:background="#66000000">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="430dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/common_google_signin_btn_icon_light_normal_background">

        <TextView
            android:id="@+id/sign_up_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="Sign Up"
            android:textColor="@color/colorAccent"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="Sign Up" />

        <EditText
            android:id="@+id/nameTextField"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/sign_up_heading"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
            android:ems="10"
            android:hint="Ron Smith"
            android:singleLine="true"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/emailTextField"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameTextField"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
            android:ems="10"
            android:hint="ron@email.com"
            android:singleLine="true"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/passwordTextField"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/emailTextField"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/passwordTextField1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/passwordTextField"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
            android:ems="10"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/mobile_number_field"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/passwordTextField1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
            android:ems="10"
            android:hint="0876543210"
            android:inputType="phone"
            android:singleLine="true"
            android:textAlignment="center" />

        <Button
            android:id="@+id/sign_up_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mobile_number_field"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_bg_rounded_corners_red"
            android:text="Submit"
            android:textColor="#FFFFFFFF"
            tools:text="Submit" />


    </RelativeLayout>


<!-- TODO: Update blank fragment layout -->

</RelativeLayout>